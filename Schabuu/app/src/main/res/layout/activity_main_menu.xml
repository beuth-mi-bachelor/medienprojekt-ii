<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.beuth.s768078.example.duygu.myapplication.PlayAlone"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_weight="3.0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/play_alone"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ff5b80c2"
        android:text="@string/play_alone_value"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/play_friends"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#ff4c9a3c"
        android:text="@string/play_with_friends_value"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#fffedfa5"
        android:text="@string/settings_value"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:layout_weight="1" />

</LinearLayout>